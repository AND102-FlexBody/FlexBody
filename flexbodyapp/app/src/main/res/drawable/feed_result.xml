        android:width="1dp"
        android:color="@color/black_olive" />

    <gradient
        android:centerColor="@color/white"
        android:endColor="@color/columbia_blue"
        android:gradientRadius="3.5dp"
        android:startColor="@color/columbia_blue"
        android:type="sweep" />
</shape>